{:paths ["src"]
 :deps {;; Core Clojure - latest stable
        org.clojure/clojure {:mvn/version "1.12.3"}

        ;; Note: cheshire, http-kit, tools.logging, and timbre are built into Babashka
        ;; These deps are only needed for JVM Clojure development/testing
        cheshire/cheshire {:mvn/version "6.1.0"}
        http-kit/http-kit {:mvn/version "2.9.0-beta3"}

        ;; Note: Trove is vendored in src/taoensso/ - no external dependency needed
        ;; com.taoensso/trove {:mvn/version "1.1.0"} - REMOVED, using vendored version
        }

 :aliases
 {:dev {:extra-paths ["dev"]
        :extra-deps {org.clojure/tools.namespace {:mvn/version "1.5.0"}
                     clj-kondo/clj-kondo {:mvn/version "2025.10.23"}
                     dev.weavejester/cljfmt {:mvn/version "0.15.6"}}}

  :test {:extra-paths ["test"]
         :extra-deps {io.github.cognitect-labs/test-runner {:git/tag "v0.5.1" :git/sha "dfb30dd"}
                      com.taoensso/timbre {:mvn/version "6.6.1"}}
         :main-opts ["-m" "cognitect.test-runner"]}

  :bb {:replace-deps {}
       :replace-paths ["src"]}

  ;; Extract CLJS-only code from CLJC files
  :extract {:extra-deps {org.clojure/tools.reader {:mvn/version "1.5.2"}}}

  ;; Build JAR and install locally
  :build {:deps {io.github.clojure/tools.build {:mvn/version "0.10.6"}}
          :ns-default build}}}